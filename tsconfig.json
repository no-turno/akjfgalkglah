{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"checkJs": false,
		"allowSyntheticDefaultImports": true,
		"verbatimModuleSyntax": true,
		"paths": {
			"@/*": ["./*"]
		},
		"emitBOM": true
	}
}
