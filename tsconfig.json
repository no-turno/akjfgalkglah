{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"checkJs": false,
		"allowSyntheticDefaultImports": true,
		"verbatimModuleSyntax": true,
		"paths": {
			"@/*": ["./*"]
		},
		"target": "esnext",
		"types": ["bun", "react/canary", "react-dom/canary"],
		"emitBOM": true,
		"noUnusedLocals": true
	},
	"include": ["**/*.ts", "**/*.tsx", "./gyoza.d.ts", ".gyoza/**/*.ts"],
	"exclude": ["node_modules", ".gyoza-cache"]
}
